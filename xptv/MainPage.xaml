<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="xptv.MainPage">

    <VerticalStackLayout
        Padding="30,0"
        Spacing="25">
        
        <Button
            Text="Open M3U File"
            Clicked="OnOpenM3UFileClicked"
            HorizontalOptions="Fill" />

        <ListView x:Name="M3UListView"
                 HorizontalOptions="Fill"
                 VerticalOptions="Fill"
                 ItemSelected="OnItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Frame Margin="5" Padding="10">
                            <Label Text="{Binding TvgName}" LineBreakMode="WordWrap"/>
                        </Frame>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
            
    </VerticalStackLayout>

</ContentPage>
